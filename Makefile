$(LIBFT_A) :
	@echo "$(YELLOW)Libft is compiling..."
	@make bonus --no-print-directory -C ./includes/libft

$(NAME_CHECKER) : $(LIBFT_A) $(SRC_DIR) $(SRC_BONUS_DIR)
		@$(CC) $(SRC_DIR) $(SRC_BONUS_DIR) $(LIBFT_A) $(FLAGS) -o $(NAME_CHECKER)

	@echo  "$(GREEN)░█▀▀█ ░█▀▀▀█ ░█▄─░█ ░█─░█ ░█▀▀▀█ 　 ░█▀▀█ ░█▀▀▀█ ░█▀▄▀█ ░█▀▀█ ▀█▀ ░█─── ░█▀▀▀ ░█▀▀▄"
