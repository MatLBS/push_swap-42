NAME = push_swap
NAME_CHECKER = checker

CC = cc
FLAGS = -Wall -Wextra -Werror -g
GREEN = \033[32m
YELLOW = \033[33m
ROUGE = \033[1;31m

MAIN = src/main.c

SRC_DIR = src/algo_utils.c src/algo_utils2.c src/calculate_cheapest.c \
			src/create_node.c src/error.c src/push_swap_utils.c \
			src/push_swap.c src/push.c src/rotate.c \
			src/swap.c src/rrotate.c src/utils.c

SRC_BONUS_DIR = checker_bonus/checker.c checker_bonus/get_next_line.c \
