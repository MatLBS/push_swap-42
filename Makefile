clean :
	@$(RM) $(OBJS)
	@make clean --no-print-directory -C ./includes/libft

fclean : clean
	@$(RM) $(NAME) $(NAME_CHECKER)
	@make fclean --no-print-directory -C ./includes/libft
	@echo "$(ROUGE)Fclean is running..."

bonus : $(NAME_CHECKER)

re : fclean all

.PHONY: all clean fclean re bonus
